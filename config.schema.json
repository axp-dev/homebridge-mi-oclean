{
  "pluginAlias": "MiOclean",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "devices": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "Toothbrush Name",
            "description": "This is the name the toothbrush will use in HomeKit",
            "required": true
          },
          "uuid": {
            "type": "string",
            "title": "UUID",
            "placeholder": "123e4567-e89b-12d3-a456-426614174000",
            "required": true
          },
          "disabled": {
            "title": "Disable the device",
            "type": "boolean",
            "default": false
          },
          "type": {
            "title": "Type device",
            "type": "string",
            "enum": [
              "toothbrush"
            ],
            "default": "toothbrush"
          },
          "updateInterval": {
            "title": "Parameters update interval",
            "type": "number",
            "default": 21600
          }
        }
      }
    }
  }
}